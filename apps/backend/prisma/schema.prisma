generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                   String         @id @default(uuid())
  role                 String         @default("USER")
  name                 String?
  phone                String         @unique
  email                String?        @unique
  password             String
  dob                  DateTime?
  tob                  String?
  pob                  String?
  country              String         @default("India")
  currency             String         @default("INR")
  isNewUser            Boolean        @default(true)
  freeConsultationUsed Boolean        @default(false)
  plan                 String         @default("FREE") // FREE, BASIC, PREMIUM
  isBlocked            Boolean        @default(false)
  wallet               Wallet?
  reviews              Review[]
  consultations        Consultation[]
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
}

model Astrologer {
  id            String         @id @default(uuid())
  role          String         @default("ASTROLOGER")
  
  // Login Details
  email         String         @unique
  phone         String         @unique
  password      String
  
  // Identity & Contact (Private/Admin Only)
  originalName  String?        // Real Name
  name          String         // Display Name (Public)
  isRealNameVisible Boolean    @default(false)
  
  age           Int?
  address       String?
  whatsapp      String?
  
  // Public Profile
  profileImage  String?
  bio           String?        // Short bio
  expertise     String?        // e.g. "Vedic, Tarot"
  languages     String?        // e.g. "Hindi, English"
  experience    Int?           // Years (numeric)
  experienceDesc String?       // Text description (Rich text/Long string)
  
  // Pricing & Status
  quotedRate    Int?           // Rate requested by Astrologer
  pricePerMin   Int            @default(0) // Approved Rate (Public)
  isApproved    Boolean        @default(false) // Admin approval status
  
  rating        Float          @default(0)
  isOnline      Boolean        @default(false)
  isBlocked     Boolean        @default(false)
  
  wallet        Wallet?
  consultations Consultation[]
  reviews       Review[]
  kyc           KYC?
  payouts       Payout[]
  createdAt     DateTime       @default(now())
}

model Admin {
  id        String   @id @default(uuid())
  role      String   @default("ADMIN")
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Wallet {
  id           String              @id @default(uuid())
  balance      Float               @default(0)
  userId       String?             @unique
  astrologerId String?             @unique
  user         User?               @relation(fields: [userId], references: [id])
  astrologer   Astrologer?         @relation(fields: [astrologerId], references: [id])
  transactions WalletTransaction[]
}

model WalletTransaction {
  id          String   @id @default(uuid())
  amount      Float
  currency    String   @default("INR")
  type        String // CREDIT, DEBIT
  status      String   @default("COMPLETED") // PENDING, COMPLETED, FAILED
  provider    String? // RAZORPAY, PAYPAL
  paymentId   String? // Payment Gateway ID
  orderId     String? // Payment Gateway Order ID
  walletId    String
  wallet      Wallet   @relation(fields: [walletId], references: [id])
  description String?
  createdAt   DateTime @default(now())
}

model Consultation {
  id            String           @id @default(uuid())
  userId        String
  astrologerId  String
  type          String
  durationMin   Int
  amountCharged Float
  user          User             @relation(fields: [userId], references: [id])
  astrologer    Astrologer       @relation(fields: [astrologerId], references: [id])
  messages      ChatMessage[]
  createdAt     DateTime         @default(now())
}

model ChatMessage {
  id             String       @id @default(uuid())
  consultationId String
  senderRole     String
  message        String
  consultation   Consultation @relation(fields: [consultationId], references: [id])
  createdAt      DateTime     @default(now())
}

model Review {
  id           String     @id @default(uuid())
  userId       String
  astrologerId String
  rating       Int
  comment      String?
  user         User       @relation(fields: [userId], references: [id])
  astrologer   Astrologer @relation(fields: [astrologerId], references: [id])
  createdAt    DateTime   @default(now())
}

model PromoCode {
  id          String   @id @default(uuid())
  code        String   @unique
  discountPct Int
  expiry      DateTime
}

model Payout {
  id           String     @id @default(uuid())
  astrologerId String
  amount       Float
  status       String
  createdAt    DateTime   @default(now())
  astrologer   Astrologer @relation(fields: [astrologerId], references: [id])
}

model KYC {
  id           String     @id @default(uuid())
  astrologerId String     @unique
  documentUrl  String
  verified     Boolean    @default(false)
  astrologer   Astrologer @relation(fields: [astrologerId], references: [id])
}
